{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "POST lead with all fields",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Тестовый клиент",
        "email": "test@example.com",
        "phone": "+79001234567",
        "message": "Хочу записаться на консультацию"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "POST lead without required fields",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Клиент"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
